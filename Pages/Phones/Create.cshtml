@page
@model EF_CRUD.Pages.Phones.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Phone</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Phone.PhoneNumber" class="control-label"></label>
                <input asp-for="Phone.PhoneNumber" class="form-control" />
                <span asp-validation-for="Phone.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.PhoneType" class="control-label"></label>
                <select asp-for="Phone.PhoneType" class="form-control">


                    <option value="CELL_PHONE">Cellphone</option>
                    <option value="RESIDENTIAL">Residential</option>
                    <option value="COMMERCIAL">Commercial</option>

                </select>
                <span asp-validation-for="Phone.PhoneType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone.ClientID" class="control-label"></label>
                <select asp-for="Phone.ClientID" class ="form-control" asp-items="ViewBag.ClientID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
